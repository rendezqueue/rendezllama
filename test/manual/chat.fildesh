#!/usr/bin/env fildesh

(: scene Str (?? .self.opt.scene "roshambo_kira"))
(: model_file Filename
 (?? .self.opt.model
  "/mnt/llama_model_data/llama_cpp_models/7B/ggml-model-q4_0.gguf"))
(: setting_file Filename (++ "example/prompt/" scene "/setting.sxproto"))
(: thread_count Str (?? .self.opt.thread_count "8"))

|< stdin
|- ./bld/src/chat/chat \
  --model $(XOF model_file) \
  --thread_count "${thread_count}" \
  --o_rolling "bld/example/prompt/${scene}.txt" \
  --x_setting $(XOF setting_file)
|> stdout

